#!/usr/bin/perl



$CONFIG_FILE = $ARGV[0];
$AUTOCONF_FILE = $ARGV[1];


# one of the preconditions is that $CONFIG_FILE should be newer than
# $AUTOCONF_FILE
&check_preconditions;


open (CFG_FILE_HANDLE, $CONFIG_FILE) or die $!;
open (AUTOCFG_FILE_HANDLE, ">", $AUTOCONF_FILE) or die $!;

print AUTOCFG_FILE_HANDLE "# DO NO EDIT\n";
print AUTOCFG_FILE_HANDLE "# Autogenerated file from $CONFIG_FILE\n";


while (<CFG_FILE_HANDLE>) {
    # Check if given line is a comment ...
    if (/^#/) {
	if (/is not set/) {
	    $offset_start = index ($_, "CONFIG");
	    $offset_end = index ($_, "is");
	    $key = substr ($_, $offset_start, $offset_end - 3);
	    print AUTOCFG_FILE_HANDLE "$key = 0\n";
	}
    }
    else {
	if (/=/) {
	    $offset = index ($_, "=");
	    $key = substr ($_, 0, $offset);
	    $value = substr ($_, $offset+1);
	    $yes_found = grep (/^y/, $value);

	    if ("$yes_found" eq "1") {
		$value = "1\n";
	    }
	    
	    print AUTOCFG_FILE_HANDLE $key;
	    print AUTOCFG_FILE_HANDLE "  = ";
	    print AUTOCFG_FILE_HANDLE $value;
	}
    }
}


close CFG_FILE_HANDLE;
close AUTOCFG_FILE_HANDLE;
exit 0;


sub check_preconditions {

    if ( $CONFIG_FILE eq "" ) {
	print "Variable CONFIG_FILE is not defined ... ";
	exit 1;
    }
    
    if ( $AUTOCONF_FILE eq "" ) {
	print "Variable AUTOCONF_FILE is not defined ... ";
	exit 1;
    }

    if (! -e $CONFIG_FILE) {
	print "$CONFIG_FILE is not present ..... \n";
	exit 1;
    }

    if ( -e $CONFIG_FILE) 
    {
	if ( -e $AUTOCONF_FILE ) 
	{
	    my $config_file_modify_timestamp = `stat --format=%Y $CONFIG_FILE`;
	    my $autoconf_file_modify_timestamp = `stat --format=%Y $AUTOCONF_FILE`;
	    if ( $config_file_modify_timestamp < $autoconf_file_modify_timestamp ) 
	    {
		# The autoconf file is already new. we do not need to re-generate it.
		# print "$AUTOCONF_FILE is already new ..... \n";
		exit 0;
	    }
	}
    }
}
